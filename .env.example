# Blockchain Configuration (Base Mainnet)
NEXT_PUBLIC_LOVE_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_CHARACTER_NFT_ADDRESS=0x...
NEXT_PUBLIC_CHAIN_ID=8453

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Agent Service Configuration
AGENT_SERVICE_URL=http://localhost:8000
AGENT_SERVICE_SECRET=development-secret

# Public URL for character images (accessible from browser)
# For local dev: http://localhost:8000
# For production: your agent service public URL (must be publicly accessible)
NEXT_PUBLIC_CHARACTER_IMAGE_BASE_URL=http://localhost:8000

# Redis Configuration (for auth sessions)
REDIS_URL=redis://localhost:6379

# Base Mainnet RPC (optional, defaults to public RPC)
BASE_RPC_URL=https://mainnet.base.org

# JWT Secret (change in production)
JWT_SECRET=your-secret-key-change-in-production
